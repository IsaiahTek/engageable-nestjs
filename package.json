{
  "name": "engageable-nestjs",
  "version": "1.0.0",
  "description": "An engagement library/plugin for adding engagement (likes, comments, reposts, bookmarks, etc.) to entities in a NestJS application.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "reaction",
    "reactions",
    "engagement",
    "engagements",
    "like",
    "likes",
    "comment",
    "comments",
    "repost",
    "reposts",
    "bookmark",
    "bookmarks",
    "review",
    "reviews",
    "rating",
    "ratings",
    "react",
    "nestjs",
    "plugin"
  ],
  "author": "Engr. Isaiah Pius E. <isaiahtech1@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IsaiahTek/engageable.git"
  },
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "copy:dist": "npm run build && rm -rf ../build/engageable-nestjs && mkdir -p ../build/engageable-nestjs && cp -r dist package.json README.md ../build/engageable-nestjs",
    "link:local": "npm run copy:dist && cd ../build/engageable-nestjs && npm link",
    "watch": "tsc -w --preserveWatchOutput",
    "watch:copy": "nodemon --watch dist --ext js,json --exec 'npm run copy:dist'"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.0.0 || ^11.0.0",
    "@nestjs/core": "^10.0.0 || ^11.0.0",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/typeorm": "^11.0.0",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@nestjs/mapped-types": "^2.0.4",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "@types/node": "^24.7.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.27",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/IsaiahTek/engageable/issues"
  },
  "homepage": "https://github.com/IsaiahTek/engageable#readme"
}
